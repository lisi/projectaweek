= form_for @round do |f|
  -if @round.errors.any?
    #error_explanation
      %h2= "#{pluralize(@round.errors.count, "error")} prohibited this round from being saved:"
      %ul
        - @round.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :deadline
    = f.datetime_select :deadline
  .actions
    = f.submit 'Save'
